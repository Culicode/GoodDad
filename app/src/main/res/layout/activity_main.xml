<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/pop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="134dp"
        android:layout_marginTop="101dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Button" />

    <ProgressBar
        android:layout_marginTop="50px"
        android:id="@+id/progressBarNong"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewX"
        android:layout_toLeftOf="@id/buttonStop"
        android:max="100"
        android:progress="10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/Cha"
            android:layout_width="18dp"

            android:layout_height="113dp"

            android:layout_marginTop="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/father" />

        <ImageView
            android:id="@+id/Me"
            android:layout_width="48dp"
            android:layout_height="112dp"


            android:layout_marginTop="150dp"
            android:layout_toRightOf="@+id/Cha"
            android:layout_weight="1"
            app:srcCompat="@drawable/mother" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginTop="300dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@+id/imageView1"
            app:srcCompat="@mipmap/ic_launcher_round" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@+id/imageView2"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@+id/imageView3"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@id/imageView4"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewX"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/buttonStop"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45px"
        app:srcCompat="@mipmap/ic_launcher_round" />
</RelativeLayout>
